<!--        app:layout_constraintTop_toBottomOf="@+id/genPlaylist_button" />-->


    <Button
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/playlistNameInput"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:id="@+id/name_button"
        android:layout_width="88dp"
        android:layout_height="44dp"
        android:text="Enter"
        app:layout_constraintBottom_toTopOf="@+id/filterText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/playlistNameInput"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintVertical_bias="0.258" />

</RelativeLayout>